<%= form_for @spot do |f| %>
  
  <div><%= f.label :name %><%= f.text_field :name %></div>
  <div><%= f.label :addr1, "Address" %><%= f.text_field :addr1 %></div>
  <div><%= f.label :addr2, "(contd)" %><%= f.text_field :addr2 %></div>

  <% Spot::FLAG_ATTRS.each do |attr| %>
    <div><%= f.check_box attr %><%= f.label attr %></div>
  <% end %>
  
  <%= f.submit "Save" %>
<% end %>
