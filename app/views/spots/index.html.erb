<%= content_for :title do %>
  Spots on File
<% end %>

<%= content_for :footer do %>
  <%= link_to "Add spot", new_spot_url, "data-role" => "button" %>
<% end %>

<% if @spots.empty? %>
  No spots yet<br/>
<% else %>
  <ul data-role="listview">
    <% @spots.each do |spot| %>
      <li><%= link_to spot.name, spot_url( spot ) %></li>
    <% end %>
  </ul>
<% end %>
