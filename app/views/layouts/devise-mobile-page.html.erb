<% content_for :content do %>
  <% if [:error, :notice, :alert].any?{ |x| flash[x] } %>
    <ul data-role="listview" data-inset="true">
      <% [:error, :notice, :alert].each do |x| if flash[x] %>
        <li><%= flash[x] %></li>
      <% end end %>
    </ul>
  <% end %>
  <%= (content_for(:devise_content).blank?) ? yield : 
          content_for(:devise_content) 
  %>
<% end %>
<%= render :template => 'layouts/single-jqmobile-page' %>
